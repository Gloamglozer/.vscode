{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Development Server",
            "type": "shell",
            "command": "python -Wall manage.py runserver",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python REPL",
            "type": "shell",
            "command": "python -i ${file} ",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Pipenv Run Python",
            "type": "shell",
            "command": "pipenv run python ${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python",
            "type": "shell",
            "command": "python ${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "python ${fileBasenameNoExtension}_test.py",
            "options": {
                "cwd": "/test"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "Run Julia",
            "type": "shell",
            "command": "julia ${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Node.js",
            "type": "shell",
            "command": "node ${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Convert from .ui to .py",
            "type": "shell",
            "command": "pyuic5 ${file} -o ${fileBasenameNoExtension}.py",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
    ]
}